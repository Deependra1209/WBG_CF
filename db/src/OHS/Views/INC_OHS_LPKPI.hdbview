VIEW INC_OHS_LPKPI AS
SELECT
    SUM(CASE WHEN INC_T_INCDT.INCST = 1459 AND INC_T_INCDT.CLASS = '977' THEN 1 ELSE 0 END) AS IJOpen,
    SUM(CASE WHEN INC_T_INCDT.INCST = 1460 AND INC_T_INCDT.CLASS = '977' THEN 1 ELSE 0 END) AS IJClosed,
    SUM(CASE WHEN INC_T_INCDT.INCST = 1459 AND INC_T_INCDT.CLASS = '978' THEN 1 ELSE 0 END) AS NMOpen,
    SUM(CASE WHEN INC_T_INCDT.INCST = 1460 AND INC_T_INCDT.CLASS = '978' THEN 1 ELSE 0 END) AS NMClosed
FROM INC_T_INCDT
WHERE INC_T_INCDT.ISDEL=0;